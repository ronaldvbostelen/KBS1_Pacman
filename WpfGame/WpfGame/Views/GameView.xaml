<UserControl x:Class="WpfGame.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas Name="GameCanvas" Background="DeepPink" Focusable="True" />
        <StackPanel Width="800" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right">
            <TextBlock HorizontalAlignment="Right" Name="GameClockHolder"
                       FontSize="20" Foreground="White" Margin="0 0 5 0"/>
            
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Visibility="Collapsed" Name="EndGamePanel">
            <Image Source="../Assets/Sprites/game-over.png"></Image>
        </StackPanel>
    </Grid>
</UserControl>
