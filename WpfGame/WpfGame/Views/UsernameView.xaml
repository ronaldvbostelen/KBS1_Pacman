<UserControl x:Class="WpfGame.Views.UsernameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Black">
    <Grid FocusManager.FocusedElement="{Binding ElementName=tbxUsername}">
        <TextBox x:Name="tbxUsername" HorizontalAlignment="Left" Height="24" Margin="292,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>
        <Label Content="Voer je gebruikersnaam in:" HorizontalAlignment="Left" Margin="134,188,0,0" VerticalAlignment="Top" Width="153" Foreground="White"/>
        <Button x:Name="BtnOk" Content="OK" HorizontalAlignment="Left" Margin="292,239,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="395,239,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
